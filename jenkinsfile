pipeline {
    agent any

    environment {
        PROJECT_OWNER = "shubhangivspatil"
        PROJECT_NAME  = "Terraform EC2 Automation"
        ACTION        = "apply"   // change to destroy when required
        AWS_REGION    = "ap-south-1"
        TF_BIN        = ""        // will be detected dynamically
    }

    options {
        timestamps()
        disableConcurrentBuilds()
        timeout(time: 30, unit: 'MINUTES')  // prevent hanging builds
    }

    stages {

        stage('Pipeline Info') {
            steps {
                echo "======================================"
                echo "Project Name    : ${PROJECT_NAME}"
                echo "Project Owner   : ${PROJECT_OWNER}"
                echo "AWS Region      : ${AWS_REGION}"
                echo "Terraform Action: ${ACTION}"
                echo "======================================"
            }
        }

        stage('Detect Terraform') {
            steps {
                script {
                    // Detect terraform binary dynamically
                    TF_BIN = sh(
                        script: "which terraform || echo ''",
                        returnStdout: true
                    ).trim()

                    if (TF_BIN == "") {
                        error "‚ùå Terraform not found on this Jenkins agent!"
                    } else {
                        echo "‚úÖ Terraform found at: ${TF_BIN}"
                    }
                }
            }
        }

        stage('Debug Environment') {
            steps {
                sh '''
                echo "Jenkins user: $(whoami)"
                echo "PATH: $PATH"
                ${TF_BIN} --version
                '''
            }
        }

        stage('Terraform Init') {
            environment {
                AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')     // Jenkins AWS credentials
                AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key') // Jenkins AWS credentials
            }
            steps {
                sh """
                ${TF_BIN} init
                """
            }
        }

        stage('Terraform Validate') {
            environment {
                AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')
                AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
            }
            steps {
                sh """
                ${TF_BIN} validate
                """
            }
        }

        stage('Terraform Plan') {
            environment {
                AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')
                AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
            }
            steps {
                sh """
                ${TF_BIN} plan -out=tfplan
                """
            }
        }

        stage('Manual Approval') {
            when {
                expression { return ACTION == 'apply' }  // only ask approval for apply
            }
            steps {
                input message: "Do you want to continue with Terraform APPLY?"
            }
        }

        stage('Terraform Apply / Destroy') {
            environment {
                AWS_ACCESS_KEY_ID     = credentials('aws-access-key-id')
                AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
            }
            steps {
                sh """
                ${TF_BIN} ${ACTION} -auto-approve
                """
            }
        }
    }

    post {
        success {
            echo "‚úÖ SUCCESS: Terraform ${ACTION} completed successfully"
            echo "üë©‚Äçüíª Executed by: ${PROJECT_OWNER}"
        }

        failure {
            echo "‚ùå FAILURE: Terraform ${ACTION} failed"
            echo "üë©‚Äçüíª Executed by: ${PROJECT_OWNER}"
        }

        always {
            echo "üìå Pipeline execution finished"
        }
    }
}
